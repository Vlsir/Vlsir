{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "composite": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "outDir": "out",
    },
    "exclude": [
        "out",
        "node_modules"
    ],
    "include": [
        "src"
    ],
}